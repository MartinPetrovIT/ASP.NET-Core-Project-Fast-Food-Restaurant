@model List<HomeListingFoodModel>

@{
    ViewData["Title"] = "Home Page";
}


@{
    var first = Model.Any() ? Model[0] : null;
    var second = Model.Count > 1 ? Model[1] : null;
    var third = Model.Count > 2 ? Model[2] : null;


}

<div class="row">
    <div class="col-md-6 offset-3 mt-5">
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">

                @if (first != null)
                {
                    <div class="carousel-item active">
                        <img height="300" width="400" class="d-block w-100" src="@first.ImageUrl" alt="First slide">
                        <div class="carousel-caption d-none d-md-block">
                            <h4>New specialty</h4>
                            <h5>@first.Name - @first.Price Leva!</h5>
                            @if (User.IsInRole(AdminConstants.Administrator))
                            {
                                <a asp-area="Admin" asp-controller="Food" asp-action="Delete" asp-route-id="@first.Id" class="btn btn-danger float-right  ml-3">Delete</a>
                                <a asp-area="Admin" asp-controller="Food" asp-action="Edit" asp-route-id="@first.Id" class="btn btn-warning float-left ml-3">Edit</a>
                            }
                            else
                            {
                            <a asp-controller="Order" asp-action="OrderNow" asp-route-itemId="@first.ItemId" class="btn btn-primary">Order now</a>
                            }
                        </div>
                    </div>
                }
                @if (second != null)
                {

                    <div class="carousel-item">
                        <img height="300" width="400" class="d-block w-100" src="@second.ImageUrl" alt="Second slide">
                        <div class="carousel-caption d-none d-md-block">
                            <h4>New specialty</h4>
                            <h5>@second.Name - @second.Price Leva!</h5>
                            @if (User.IsInRole(AdminConstants.Administrator))
                            {
                                <a asp-area="Admin" asp-controller="Food" asp-action="Delete" asp-route-id="@second.Id" class="btn btn-danger float-right  ml-3">Delete</a>
                                <a asp-area="Admin" asp-controller="Food" asp-action="Edit" asp-route-id="@second.Id" class="btn btn-warning float-left ml-3">Edit</a>
                            }
                            else
                            {
                            <a asp-controller="Order" asp-action="OrderNow" asp-route-itemId="@second.ItemId" class="btn btn-primary">Order now</a>
                            }
                        </div>
                    </div>
                }
                @if (third != null)
                {

                    <div class="carousel-item">
                        <img height="300" width="400" class="d-block w-100" src="@third.ImageUrl" alt="Third slide">
                        <div class="carousel-caption d-none d-md-block">
                            <h4>New specialty</h4>
                            <h5>@third.Name - @third.Price Leva!</h5>
                            @if (User.IsInRole(AdminConstants.Administrator))
                            {
                                <a asp-area="Admin" asp-controller="Food" asp-action="Delete" asp-route-id="@third.Id" class="btn btn-danger float-right  ml-3">Delete</a>
                                <a asp-area="Admin" asp-controller="Food" asp-action="Edit" asp-route-id="@third.Id" class="btn btn-warning float-left ml-3">Edit</a>
                            }
                            else
                            {
                            <a asp-controller="Order" asp-action="OrderNow" asp-route-itemId="@third.ItemId" class="btn btn-primary">Order now</a>
                            }
                        </div>
                    </div>
                }
                <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
</div>



