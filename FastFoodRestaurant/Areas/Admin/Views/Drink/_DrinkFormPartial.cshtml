@model DrinkFormModel

<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" placeholder="">
        <span asp-validation-for="Name" class="small text-danger"></span>

    </div>

    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" placeholder="In leva!">
        <span asp-validation-for="Price" class="small text-danger"></span>
    </div>

    <div class="form-control-file">
        <label asp-for="Image"></label>
        <input asp-for="Image" type="file" class="form-control-file">
        <span asp-validation-for="Image" class="small text-danger"></span>
    </div>

    <div class="form-check">
        <input asp-for="IsAlcoholic" type="checkbox" class="form-check-input">
        <label class="form-check-label" asp-for="IsAlcoholic">Is there alcohol?</label>
    </div>



    <input class="btn btn-primary float-right" type="submit" value="Save" />
</form>
