@model DrinkFormModel

<form method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" placeholder="">
        <span asp-validation-for="Name" class="small text-danger"></span>

    </div>

    <div class="form-group">
        <label asp-for="ImageUrl"></label>
        <input asp-for="ImageUrl" class="form-control" placeholder="Your Url here...">
        <span asp-validation-for="ImageUrl" class="small text-danger"></span>
    </div>


    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" placeholder="In leva!">
        <span asp-validation-for="Price" class="small text-danger"></span>
    </div>

    <div class="form-check">
        <input asp-for="IsAlcoholic" type="checkbox" class="form-check-input" id="exampleCheck1">
        <label class="form-check-label" asp-for="IsAlcoholic">Is there alcohol?</label>
    </div>


    <input class="btn btn-primary float-right" type="submit" value="Save" />
</form>
