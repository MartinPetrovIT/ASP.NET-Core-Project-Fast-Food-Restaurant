@model FoodFormModel

<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" placeholder="">
        <span asp-validation-for="Name" class="small text-danger"></span>

    </div>

    <div class="form-control-file">
        <label asp-for="Image"></label>
        <input asp-for="Image" type="file" class="form-control-file">
        <span asp-validation-for="Image" class="small text-danger"></span>
    </div>


    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" placeholder="In leva!">
        <span asp-validation-for="Price" class="small text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control" placeholder="tomatoes,chicken,pickles..."></textarea>
        <span asp-validation-for="Description" class="small text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CategoryId"></label>
        <select asp-for="CategoryId" class="form-control">
            @foreach (var category in Model.Categories)
            {
                <option value="@category.Id">@category.Name</option>
            }
        </select>
        <span asp-validation-for="CategoryId" class="small text-danger"></span>
    </div>



    <input class="btn btn-primary float-right" type="submit" value="Save" />
</form>